{
  "manifest_version": 2,

  "name": "Set In Stone",
  "description": "Set In Stone plugin",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Set In Stone"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
  {
    "matches": ["http://*/*"],
    "css": [],
    "js": ["metamaska.js"],
    "run_at": "document_end"
  }
  ],
  "web_accessible_resources": ["abis.js", "script.js"]
}